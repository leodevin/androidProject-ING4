<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addGameActivity">

    <TextView
        android:id="@+id/addGameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="54dp"
        android:text="TextView"
        android:textSize="30sp"
        tools:text="@string/addGameTitle" />

    <TextView
        android:id="@+id/date_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addGameTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="31dp"
        android:text="@string/date" />

    <TextView
        android:id="@+id/date_form_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addGameTitle"
        android:layout_alignLeft="@id/date_form_title"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/date_form_title"
        android:hint="@string/enter_date" />

    <TextView
        android:id="@+id/adversaire_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/date_form_title"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:text="@string/adversaire_form" />

    <TextView
        android:id="@+id/adversaire_form_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/adversaire_form_title"
        android:layout_alignTop="@id/date_form_value"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:hint="@string/enter_adversaire" />

    <TextView
        android:id="@+id/addGameResTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adversaire_form_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="53dp"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="@string/addGameResTitle" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addGametableLayoutResult"
        android:layout_below="@+id/addGameResTitle"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="30dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="0dp">

            <TextView
                android:layout_width="120dp"
                android:padding="3dip"
                android:text="@string/Roger_ederer" />

            <EditText
                android:background="#F4F4F4"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />

            <EditText
                android:background="@android:color/transparent"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />

            <EditText
                android:background="#F4F4F4"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />/>

            <EditText
                android:background="@android:color/transparent"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />

            <EditText
                android:background="#F4F4F4"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />/>


        </TableRow>

        <TableRow
            android:layout_width="0dp">

            <TextView
                android:padding="3dip"
                android:text="@string/adversaire" />

            <EditText
                android:background="#F4F4F4"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />/>

            <EditText
                android:background="@android:color/transparent"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />

            <EditText
                android:background="#F4F4F4"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />/>

            <EditText
                android:background="@android:color/transparent"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />

            <EditText
                android:background="#F4F4F4"
                android:hint="@string/_0"
                android:padding="3dip"
                android:textAlignment="center" />/>
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/apercu_picture"
        android:layout_width="143dp"
        android:layout_height="131dp"
        android:layout_above="@+id/takePicture"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_image_black_24dp" />

    <Button
        android:id="@+id/takePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/takePicture" />
</RelativeLayout>