<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/gameListLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/list_date"
        android:text="date exemple"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/playerImageList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/list_date"
        android:scaleType="centerCrop"
        android:src="@drawable/rogerfederer" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/adversaireNameList"
        android:text="Adversaire"
        android:layout_toRightOf="@id/playerImageList"
        android:layout_marginLeft="60dp"
        android:gravity="center_vertical"/>




</RelativeLayout>